{
  "name": "x402-indexer",
  "version": "1.0.0",
  "description": "A TypeScript crawler/indexer that enriches x402 ecosystem data from the Bazaar discovery layer",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "x402-indexer": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "x402",
    "http-402",
    "crypto",
    "payments",
    "indexer",
    "bazaar",
    "discovery"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/coinbase/x402"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "commander": "^12.1.0",
    "playwright": "^1.57.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
